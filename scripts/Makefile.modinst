# ==========================================================================
# Installing modules
# ==========================================================================

.PHONY: __modinst
__modinst:

include scripts/Makefile.lib

#

__modules := $(shell cat /dev/null $(wildcard $(MODVERDIR)/*.mod))
modules := $(patsubst %.o,%.ko,$(wildcard $(__modules:.ko=.o)))

ifneq ($(filter-out $(modules),$(__modules)),)
  $(warning *** Uh-oh, you have stale module entries. You messed with SUBDIRS, do not complain if something goes wrong.)
endif

.PHONY: $(modules)
__modinst: $(modules)
	@:

# Modules built within the kernel tree

quiet_cmd_modules_install = INSTALL $@
      cmd_modules_install = mkdir -p $(MODLIB)/kernel/$(@D); \
			    cp $@ $(MODLIB)/kernel/$(@D)

$(filter-out ../% /%,$(modules)):
	$(call cmd,modules_install)

# Modules built outside go into extra by default

MOD_DIR ?= extra

quiet_cmd_modules_install_extra = INSTALL $(@F)
      cmd_modules_install_extra = mkdir -p $(MODLIB)/$(MOD_DIR); \
			    	  cp $@ $(MODLIB)/$(MOD_DIR)

$(filter     ../% /%,$(modules)):
	$(call cmd,modules_install_extra)
